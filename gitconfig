  st = stash
  delete-branch = "!f() { git branch -d $1; git push origin :$1; }; f"
  inspect = "!f() { git d $1^ `shift` \"$@\"; }; f"
  edit = "!f() { vim `git status --short | sed 's/^.. //'`; }; f"

